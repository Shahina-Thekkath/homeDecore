<%-include("../../views/partials/user/signupLoginHeader")%>

<style>
            #toggleLoginPassword {
            font-size: 1.2rem;
            color: #888;
        }

        #toggleLoginPassword:hover {
            color: #000;
        }

</style>

        <!--====== End - Main Header ======-->


        <!--====== App Content ======-->
        <div class="app-content">

            <!--====== Section 1 ======-->
            <div class="u-s-p-y-60">

                
            </div>
            <!--====== End - Section 1 ======-->


            <!--====== Section 2 ======-->
            <div class="u-s-p-b-60">

                <!--====== Section Intro ======-->
                <div class="section__intro u-s-m-b-60">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section__text-wrap">
                                    <h1 class="section__heading u-c-secondary">ALREADY REGISTERED?</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Intro ======-->


                <!--====== Section Content ======-->
                <div class="section__content">
                    <div class="container">
                        <div class="row row--center">
                            <div class="col-lg-6 col-md-8 u-s-m-b-30">
                                <div class="l-f-o">
                                    <div class="l-f-o__pad-box">
                                        <h1 class="gl-h1">I'M NEW CUSTOMER</h1>

                                        <span class="gl-text u-s-m-b-30">By creating an account with our store, you will be able to move through the checkout process faster, store shipping addresses, view and track your orders in your account and more.</span>
                                        <div class="u-s-m-b-15">

                                            <a class="l-f-o__create-link btn--e-transparent-brand-b-2" href="/signup">CREATE AN ACCOUNT</a></div>
                                        <h1 class="gl-h1">SIGNIN</h1>

                                        <span class="gl-text u-s-m-b-30">If you have an account with us, please log in.</span>
                                        <form class="l-f-o__form" method="POST" action="/login">
                                            <div class="gl-s-api">
                                                <div class="u-s-m-b-15">

                                                    <a href="/auth/google" class="gl-s-api__btn gl-s-api__btn--gplus">
                                                            <i class="fab fa-google"></i>
                                                            <span>Signup with Google</span>
                                                        </a>
                                                    </div>
                                                        
                                                </div>

                                                        <% if (typeof blockedMessage !== 'undefined') { %>
                                                        <p class="text-danger" style="color: red;"><%= blockedMessage %></p>
                                                        <% } else if (typeof locals.message !== 'undefined') { %>
                                                        <p class="text-danger" style="color: red;"><%= locals.message %></p>
                                                        <% } %>

                                            
                                            <div class="u-s-m-b-30">

                                                <label class="gl-label" for="login-email">E-MAIL *</label>

                                                <input class="input-text input-text--primary-style" type="email" id="login-email" placeholder="Enter E-mail" name="email" value="<%=locals.email?email:""%>">
                                                 <span style="color: #e63946; font-size: 12px; font-weight: 600;">
                                                    <%= locals.invalidEmail ? invalidEmail : "" %>
                                                </span>

                                            
                                            </div>

                                            <div class="u-s-m-b-30">

                                                <label class="gl-label" for="login-password">PASSWORD *</label>

                                                <div style="position: relative; display: inline-block;">
                                                    <input
                                                        class="input-text input-text--primary-style"
                                                        type="password"
                                                        id="login-password"
                                                        placeholder="Enter Password"
                                                        name="password"
                                                        style="padding-right: 340px;"
                                                    />
                                                    <span
                                                        id="toggleLoginPassword"
                                                        style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;"
                                                    >
                                                        üëÅÔ∏è
                                                    </span>
                                                </div>
                                                
                                                <span style="color: #e63946; font-size: 12px; font-weight: 600;"><%=locals.invalidPassword?invalidPassword:""%></span></div>
                                            <div class="gl-inline">
                                               

                                                <div class="u-s-m-b-30">

                                                    <button class="btn btn--e-transparent-brand-b-2" type="submit">LOGIN</button></div>
                                                <div class="u-s-m-b-30">

                                                    <a class="gl-link" href="/forgotPassword">Lost Your Password?</a></div>
                                            </div>
                                            <div class="u-s-m-b-30">

                                                <!--====== Check Box ======-->
                                                <div class="check-box">

                                                    <input type="checkbox" id="remember-me">
                                                    <div class="check-box__state check-box__state--primary">

                                                        <label class="check-box__label" for="remember-me">Remember Me</label></div>
                                                </div>
                                                <!--====== End - Check Box ======-->
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 2 ======-->
        </div>
        <!--====== End - App Content ======-->


        <!--====== Main Footer ======-->

        <script>
            // Select elements
            const loginPasswordInput = document.getElementById("login-password");
            const toggleLoginPassword = document.getElementById("toggleLoginPassword");

            // Add event listener
            toggleLoginPassword.addEventListener("click", () => {
                // Toggle the input type
                const type = loginPasswordInput.type === "password" ? "text" : "password";
                loginPasswordInput.type = type;

                // Toggle the icon (optional)
                toggleLoginPassword.textContent = type === "password" ? "üëÅÔ∏è" : "üôà";
            });

        </script>
        <%-include("../../views/partials/user/footer")%>  