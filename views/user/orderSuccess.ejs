<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Success - Ludus</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/orderSuccess.css">
    
</head>
<body>
    <main class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Order Confirmation</li>
            </ol>
        </nav>

        <div class="order-success">
            <h1 class="page-title text-center">Thank You for Your Order!</h1>
            <p class="subtitle text-center">Your order has been successfully placed.</p>

            <!-- Order Details -->
            <div class="order-details">
                <h2 class="address-title text-center">Order Summary</h2>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.products.forEach(product => { %>
                                <tr>
                                    <td><%= product.name %></td>
                                    <td><%= product.quantity %></td>
                                    <td class="price-text">₹<%= product.price.toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" class="fw-bold">Subtotal</td>
                                <td class="price-text">₹<%= order.totalAmount.toFixed(2) %></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="fw-bold">Shipping</td>
                                <td class="price-text">₹0.00</td>
                            </tr>
                            <tr class="grand-total-row">
                                <td colspan="2" class="fw-bold">Grand Total</td>
                                <td class="fw-bold">₹<%= order.totalAmount.toFixed(2) %></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Shipping Address -->
            <div class="shipping-address">
                <h2 class="address-title text-center">Shipping Address</h2>
                <address class="text-center">
                    <span class="customer-name"><%= order.shippingAddress.name %></span><br>
                    <%= order.shippingAddress.address %>,<br>
                    <%= order.shippingAddress.locality %>, <%= order.shippingAddress.state %>,<br>
                    <%= order.shippingAddress.country %>, <%= order.shippingAddress.pincode %>
                </address>
            </div>

            <!-- Continue Shopping Button -->
            <div class="text-center">
                <a href="/" class="btn-continue">Continue Shopping</a>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>