                    <div class="dash">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-3 col-md-12">

                                    <!--====== Dashboard Features ======-->
                                   <div class="dash__box dash__box--bg-white dash__box--shadow u-s-m-b-30">
                                        <div class="dash__pad-1">

                                            <span class="dash__text u-s-m-b-16">Hello, <%= user.name%></span>
                                            <ul class="dash__f-list">
                                                <li>

                                                    <a  href="/profile">My Profile</a></li>
                                                <li>

                                                    <a href="/address">Address Book</a></li>
                                               
                                                <li>

                                                    <a href="/orders">My Orders</a></li>
                                                <li>

                                                    <a class="dash-active" href="/wallet">My Wallet</a></li>
                                                <li>

                                                    <a href="/logout">Logout</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    
                                    <!--====== End - Dashboard Features ======-->
                                </div>
                                <div class="col-lg-9 col-md-12">
                                    <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white">
                                        <div class="dash__pad-2">
                                            <h1 class="dash__h1 u-s-m-b-14">My Wallet details</h1>

                                            <div class="content-body">
                                                 <!-- Wallet Balance Card -->
                                                <div class="wallet-balance">
                                                    <div class="balance-header">
                                                        <div class="wallet-icon">
                                                            <i class="fas fa-wallet"></i>
                                                        </div>
                                                        <div class="balance-info">
                                                            <h2>Current Balance</h2>
                                                            <div class="balance-amount">₹<%= (wallet.balance).toFixed(2)%></div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Transactions Section -->
                                                <div class="transactions-section">
                                                    <div class="table-container">
                                                        <table class="transactions-table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Transaction ID</th>
                                                                    <th>Date</th>
                                                                    <th>Type</th>
                                                                    <th>Amount</th>
                                                                    <th>Reason</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% if(wallet && wallet.transactions.length > 0){ %>
                                                                       <% wallet.transactions.forEach((txn) => { %>
                                                                            <tr>
                                                                            <td><span class="transaction-id">#<%= txn.transactionId %></span></td>
                                                                            <td class="date"><%= txn.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %><br>
                                                                                <small><%= txn.date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %></small></td>
                                                                            <td>
                                                                            <% if (txn.type === 'refund') { %>
                                                                                    <span class="transaction-type type-refund"><i class="fas fa-undo"></i> Refund</span>
                                                                                <% } else if (txn.type === 'credit') { %>
                                                                                    <span class="transaction-type type-credit"><i class="fas fa-plus-circle"></i> Credit</span>
                                                                                <% } else if (txn.type === 'debit') { %>
                                                                                    <span class="transaction-type type-debit"><i class="fas fa-minus-circle"></i> Debit</span>
                                                                                <% } %>
                                                                            </td>
                                                                            <td class="amount <%= txn.type === 'debit' ? 'negative' : 'positive' %>">
                                                                                <%= txn.type === 'debit' ? '-' : '+' %>₹<%= txn.amount.toFixed(2) %>
                                                                            </td>
                                                                            <td class="reason"><%= txn.reason %></td>
                                                                        </tr>
                                                                    <% }) %>
                                                                <% } else { %>
                                                                   <tr>
                                                                    <td colspan="4" class="dash__text " style="text-align: center; vertical-align: middle; padding-left: 260px;">Your wallet is empty</td> 
                                                                   </tr>
                                                                                                                                    
                                                                <% } %>
                                                               
                                                               
                                                                
                                                                
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <% if(totalPages > 1) { %>
                                      <div class="u-s-p-y-60">
                                        <ul class="shop-p__pagination">
                                            <% if (currentPage > 1) { %>
                                            <li>
                                                <a class="fas fa-angle-left" href="/wallet?page=<%= currentPage - 1 %>&filter=<%= filter %>"></a>
                                            </li>
                                            <% } %>

                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                            <li class="<%= i === currentPage ? 'is-active' : '' %>">
                                                <a href="/wallet?page=<%= i %>&filter=<%= filter %>"><%= i %></a>
                                            </li>
                                            <% } %>

                                            <% if (currentPage < totalPages) { %>
                                            <li>
                                                <a class="fas fa-angle-right" href="/wallet?page=<%= currentPage + 1 %>&filter=<%= filter %>"></a>
                                            </li>
                                            <% } %>
                                        </ul>
                                        </div>
                                 <% } %>
                                    <!--====== Pagination ======-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 2 ======-->
        </div>
