    <script>
       
       async function validateForm(event) {
       event.preventDefault(); // Prevent form from submitting normally
       let isValid = true;


    // Collect form data
    const name = document.getElementById("address-fname").value.trim();
    const locality = document.getElementById("address-locality").value.trim();
    const phone = document.getElementById("address-phone").value.trim();
    const address = document.getElementById("address-street").value.trim();
    const country = document.getElementById("address-country").value;
    const state = document.getElementById("address-state").value;
    const city = document.getElementById("address-city").value.trim();
    const pincode = document.getElementById("address-pincode").value.trim();


    // Extract `from` parameter from the URL
    const urlParams = new URLSearchParams(window.location.search);
    const from = urlParams.get("from"); // 'checkout' or 'addressBook' or null if not provided
    
    // Validation patterns
    const namePattern = /^[a-zA-Z.\s,]{3,80}$/;
    const phonePattern = /^[6-9]\d{9}$/;
    const pincodePattern = /^\d{5,6}$/;
    const addressPattern = /^[a-zA-Z0-9\s.,\-\/#()]{3,100}$/;
    const locationPattern = /^[a-zA-Z0-9\s.,\-\/]{3,50}$/;


    // Clear previous error messages
    hideError("name-error");
    hideError("phone-error");
    hideError("pincode-error");
    hideError("locality-error");
    hideError("address-error");
    hideError("city-error");

     // Validate name
     if (name === "") {
        showError("name-error", "Full name is required.");
        isValid = false;
    } else if (!namePattern.test(name)) {
        showError("name-error", "Should contain only alphabets.");
        isValid = false;
    } else if (name.length < 3) {
        showError("name-error", "Should be at least 3 characters.");
        isValid = false;
    }



// Validate phone
   if (phone === "") {
        showError("phone-error", "Phone number is required.");
        isValid = false;
    } else if (!phonePattern.test(phone)) {
        showError("phone-error", "Mobile number must be exactly 10 digits and start with 6–9 (e.g., 9876543210).");
        isValid = false;
    }

    

    // Validate pincode
    if (pincode === "") {
        showError("pincode-error", "Pincode is required.");
        isValid = false;
    } else if (!pincodePattern.test(pincode)) {
        showError("pincode-error", "Should be 5-6 digits.");
        isValid = false;
    }
   

    // Validate locality
    if (locality === "") {
        showError("locality-error", " locality is required.");
        isValid = false;
    } else if (!locationPattern.test(locality)) {
        showError("locality-error", "Should contain only alphabets.");
        isValid = false;
    } else if (locality.length < 3) {
        showError("locality-error", "Should be at least 3 characters.");
        isValid = false;
    }

    // Validate city
    if (city === "") {
        showError("city-error", "City is required.");
        isValid = false;
    } else if (!namePattern.test(city)) {
        showError("city-error", "Please enter a valid address with only letters, numbers, and basic symbols (, . - /).");
        isValid = false;
    } else if (city.length < 3) {
        showError("city-error", "Should be at least 3 characters.");
        isValid = false;
    }
 
    // Validate address
    if (address === "") {
        showError("address-error", "Address is required.");
        isValid = false;
    } else if (!addressPattern.test(address)) {
        showError("address-error", "Should contain only alphabets.");
        isValid = false;
    } else if (address.length < 3) {
        showError("address-error", "Should be at least 3 characters.");
        isValid = false;
    }

    // Validate country
    if (country === "") {
        showError("country-error", "country is required.");
        isValid = false;
    } 

    // Validate state
    if (state === "") {
        showError("state-error", "state is required.");
        isValid = false;
    } 

    if (!isValid) return false; // Stop execution if validation fails



    // Prepare data for sending
    const formData = {
      name,
      locality,
      phone,
      address,
      country,
      state,
      city,
      pincode
    };    

    try {
      // Use fetch API to send data
      const response = await fetch(`/addAddress`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(formData),
      });

      const result = await response.json();  //parse the response (convert int normal from JSON)  ie it would like normal key value pair in an object

      if (response.ok) {
        Swal.fire({
          icon: "success",
          title: "Address Added!",
          text: result.message || "Your address has been successfully added.",
        }).then(() => {
             if(from === 'checkout') {
                window.location.href = '/checkout';
             } else if(from === 'addressBook') {
                window.location.href = '/address';
             }
        });
      } else {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: result.message || "Failed to add the address. Please try again.",
        });
      }
    } catch (error) {
      Swal.fire({
        icon: "error",
        title: "Error",
        text: "An unexpected error occurred. Please try again later.",
      });
    }

    return false; // Prevent default form submission
  }

  // Helper functions
function showError(elementId, message) {
    const errorElement = document.getElementById(elementId);
    if (errorElement) {
        errorElement.style.display = "block";
        errorElement.textContent = message;
    }
}

function hideError(elementId) {
    const errorElement = document.getElementById(elementId);
    if (errorElement) {
        errorElement.style.display = "none";
        errorElement.textContent = "";
    }
}



        function message(msg){
          if(msg){
                Swal.fire({
