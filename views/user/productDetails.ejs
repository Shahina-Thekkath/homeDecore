    <script>
  // Attach event listener to the form
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector("#add-to-cart-form");
    const input = document.querySelector(".input-counter__text");
    const plus = document.querySelector("#plus");
    const minus = document.querySelector("#minus");

    const productId = input.dataset.productId;
    const stock = parseInt(input.dataset.stock, 10);
    const maxAllowed = Math.min(stock, 5); // max between stock and 5

    // Plus button
    plus.addEventListener("click", () => {
      let value = parseInt(input.value, 10) || 1;
      if (value <= maxAllowed) {
        input.value = value;
      } else {
        Swal.fire({
          icon: "error",
          title: "Quantity Limit",
          text: `You can only select up to ${maxAllowed} items.`,
        });
        input.value = maxAllowed;
      }
    });

    // Minus button
    minus.addEventListener("click", () => {
      let value = parseInt(input.value, 10) || 1;
      if (value > 1) {   // ensure when decreased doesn't go below 1
        input.value = value - 1;
      }
    });

    // Manual input validation
    input.addEventListener("input", () => {
      let value = parseInt(input.value, 10) || 1;
      if (value < 1) {
        input.value = 1;
      } else if (value > maxAllowed) {
        input.value = maxAllowed;
        Swal.fire({
          icon: "error",
          title: "Quantity Exceeded",
          text: `You can't select more than ${maxAllowed} items.`,
        });
      }
    });

    // Handle submit
    form.addEventListener("submit", async (event) => {
      event.preventDefault();

      const selectedQuantity = parseInt(input.value, 10);

      try {
        const response = await fetch("/add-to-cart", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ productId, quantity: selectedQuantity }),
          credentials: "include",
        });

        const data = await response.json();

        if (response.ok) {
          Swal.fire({
            icon: "success",
            title: "Added to Cart",
            text: data.message,
          }).then(() => {
            window.location.reload();
          });
        } else {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: data.error || "Failed to add to cart.",
          });
        }
      } catch (error) {
        window.location.href = "/login";
      }
    });

    // ===== WISHLIST FUNCTIONALITY =====
    const wishlistBtn = document.querySelector('#addToWishlistBtn');
    const wishlistIcon = document.querySelector('#wishlistIcon');

    // Check wishlist status on page load
    checkWishlistStatus();

    // Add event listener for wishlist button
    wishlistBtn.addEventListener("click", function () {
      addToWishlist();
    });

    // Check if product is in wishlist
    async function checkWishlistStatus() {
      try {
        const response = await fetch(`/check-wishlist/${productId}`, {
          method: 'GET'
        });
        const data = await response.json();
        updateHeartIcon(data.inWishlist);
      } catch (error) {
        console.error("Error checking wishlist:", error);
      }
    }

    // Add product to wishlist
    function addToWishlist() {
      fetch("/add-to-wishlist", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ productId })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          // Update heart icon to filled
          updateHeartIcon(true);

          Swal.fire({
            icon: 'success',
            title: 'Added to Wishlist',
            text: data.message,
            showConfirmButton: true,
            confirmButtonText: 'OK',
            confirmButtonColor: '#3085d6'
          });
        } else {
          Swal.fire({
            icon: 'warning',
            title: 'Oops..',
            text: data.error
          });
        }
      })
      .catch(err => {
        console.error(err);
        Swal.fire({
          icon: 'error',
          title: 'Error!',
          text: 'Something went wrong.'
        });
      });
    }

    // Update heart icon appearance
    function updateHeartIcon(inWishlist) {
      if (inWishlist) {
        // Filled red heart
        wishlistIcon.classList.remove('far');
        wishlistIcon.classList.add('fas');
        wishlistIcon.style.color = '#ff4757';
      } else {
        // Empty heart
        wishlistIcon.classList.remove('fas');
        wishlistIcon.classList.add('far');
        wishlistIcon.style.color = '';
      }
    }

  });

  function deleteMiniCartItem(itemId) {
    
    Swal.fire({
        title: "Are you sure?",
        text: "This will be removed from your cart",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, Delete it!",
        cancelButtonText: "Cancel"
    }).then(result => {
        if(result.isConfirmed) {
           fetch(`/deleteCartItem/${itemId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
           }).then(response => response.json())
           .then(data => {
            if(data.success) {
                Swal.fire({
                    icon: "success",
                    title: "Removed",
                    text: "Item removed from cart",
                    timer: 1500,
                    showConfirmButton: false
                }).then(() => {
                    location.reload();
                });
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: data.message || "Failed to delete the item. Please try again"
                });
            }
           }).catch(err => {
            Swal.fire({
                icon: "error",
                title: "Error",
                text: "An unexpected error occurred. Please try again later."
            });
           })
        }
    })
}


