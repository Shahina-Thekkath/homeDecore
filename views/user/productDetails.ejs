                                        <a href="/"><i class="fas fa-home"></i></a></li>
                                    <li>

                                        <a href="/wishlist"><i class="far fa-heart"></i></a></li>
                                    <li class="has-dropdown">

                                        <a class="mini-cart-shop-link"><i class="fas fa-shopping-bag"></i></a>

                                        <!--====== Dropdown ======-->

                                        <span class="js-menu-toggle"></span>
                                        <% if(cart && cart.items){%>

                                        <div class="mini-cart">

                                            <!--====== Mini Product Container ======-->
                                            <div class="mini-product-container gl-scroll u-s-m-b-15">
                                         
                                         
                                            <%cart.items.forEach((item) =>{%>

                                                <div class="card-mini-product">
                                                    <div class="mini-product">
                                                        <div class="mini-product__image-wrapper">
                                                            <a class="mini-product__link" href="/product-details/<%=item.productId._id%>">
                                                                <% let img = item.productId.image[0] %>
                                                                <img class="u-img-fluid" src="<%= img.url %>" alt="<%=item.productId.name%>">
                                                            </a>
                                                        </div>
                                                        <div class="mini-product__info-wrapper">
                                                            <span class="mini-product__name">
                                                                <a href="/product/<%=item.productId._id%>"><%=item.productId.name%></a>
                                                            </span>
                                                            <span class="mini-product__quantity"><%=item.quantity%> x</span>

                                                            
                                                                   <span class="mini-product__price"><%=item.discountedPrice%></span>
                                                            
                                                            
                                                        </div>
                                                    </div>

                                                    <a class="mini-product__delete-link far fa-trash-alt"
                                                       onclick="deleteMiniCartItem('<%= item._id %>')"
                                                       title="Remove item"
                                                    ></a>
                                                </div>

                                            <%})%>
                                               
                                            </div>
                                            <!--====== End - Mini Product Container ======-->


                                            <!--====== Mini Product Statistics ======-->
                                            <div class="mini-product-stat">
                                                <div class="mini-total">

                                                    <span class="subtotal-text">SUBTOTAL</span>

                                                    <span class="subtotal-value"><%=grandTotal%></span></div>
                                                <div class="mini-action">

                                                    <a class="mini-link btn--e-brand-b-2" href="/checkout">PROCEED TO CHECKOUT</a>

                                                    <a class="mini-link btn--e-transparent-secondary-b-2" href="/cart">VIEW CART</a></div>
                                            </div>

                                            
                                            <!--====== End - Mini Product Statistics ======-->
                                        </div>

                                        <%}%>
                                        <!--====== End - Dropdown ======-->
                                    </li>
                                </ul>
                                <!--====== End - List ======-->
                            </div>
                            <!--====== End - Menu ======-->
                        </div>
                        <!--====== End - Dropdown Main plugin ======-->
                    </div>
                    <!--====== End - Secondary Nav ======-->
                </div>
            </nav>
            <!--====== End - Nav 2 ======-->
        </header>
        <!--====== End - Main Header ======-->


        <!--====== App Content ======-->
        <div class="app-content">

            <!--====== Section 1 ======-->
            <div class="u-s-p-t-90">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5">

                            <!--====== Product Breadcrumb ======-->
                            <div class="pd-breadcrumb u-s-m-b-30">
                                <ul class="pd-breadcrumb__list">
                                    <li class="has-separator">

                                        <a href="/">Home</a></li>
                                    
                                    <li class="is-marked">

                                        <a href="#"><%=currentProduct.name%></a></li>
                                </ul>
                            </div>
                            <!--====== End - Product Breadcrumb ======-->


                            <!--====== Product Detail Zoom ======-->
                            <div class="pd u-s-m-b-30">
                                <div class="slider-fouc pd-wrap">
                                    <div id="pd-o-initiate">
                                        <%currentProduct.image.forEach((img) =>{%>
                                            
                                            <div class="pd-o-img-wrap" data-src="<%=img.url%>">

                                                <img class="u-img-fluid" src="<%=img.url%>" data-zoom-image="<%=img.url%>" alt=""></div> 
                                        <%})%>

                                        
                                    </div>

                                    <span class="pd-text">Click for larger zoom</span>
                                </div>
                                <div class="u-s-m-t-15">
                                    <div class="slider-fouc">

                                        <div id="pd-o-thumbnail">

                                            <%currentProduct.image.forEach((img) =>{%>
                                                <div>

                                                    <img class="u-img-fluid" 
                                                    src="<%= img.url %>"  
                                                    alt="">
                                                </div>
                                                
                                            <%})%>

                                            

                                            
                                               
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--====== End - Product Detail Zoom ======-->
                        </div>
                        <div class="col-lg-7">

                            <!--====== Product Right Side Details ======-->
