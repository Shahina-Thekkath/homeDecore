    <script>
       
        async function validateForm(event) {
        event.preventDefault(); // Prevent form from submitting normally
        let isValid = true;
 
    const addressId = document.getElementById("addressId").value;
    console.log(addressId);
    
     // Collect form data
     const locality = document.getElementById("address-locality")?.value?.trim() ?? ""; // Use empty string as default
     console.log(locality);
     
       const phone = document.getElementById("address-phone")?.value?.trim() ?? "";
       const name = document.getElementById("address-name")?.value?.trim() ?? "";
       const address = document.getElementById("address-address")?.value?.trim() ?? "";
       const country = document.getElementById("address-country")?.value ?? "";
       const state = document.getElementById("address-state")?.value ?? "";
       const city = document.getElementById("address-city")?.value?.trim() ?? "";
       const pincode = document.getElementById("address-pincode")?.value?.trim() ?? "";

       // Extract `from` parameter from the URL
        const urlParams = new URLSearchParams(window.location.search);
        const from = urlParams.get("from"); // 'checkout' or 'addressBook' or null if not provided
        console.log("From parameter:", from);
        
        
        
     // Validation patterns
     const namePattern = /^[a-zA-Z.\s,]+$/;
     const phonePattern = /^[6-9]\d{9}$/;
     const pincodePattern = /^\d{5,6}$/;
     const addressPattern = /^[a-zA-Z0-9., ]+$/;
     const locationPattern = /^[a-zA-Z0-9\s.,\-\/]+$/;
 
 
     // Clear previous error messages
     hideError("name-error");
     hideError("phone-error");
     hideError("pincode-error");
     hideError("locality-error");
     hideError("address-error");
     hideError("city-error");
 
      // Validate name
      if (name === "") {
         showError("name-error", "Full name is required.");
         isValid = false;
     } else if (!namePattern.test(name)) {
         showError("name-error", "Should contain only alphabets.");
         isValid = false;
     } else if (name.length < 3) {
         showError("name-error", "Should be at least 3 characters.");
         isValid = false;
     }
 
 
 
 // Validate phone
    if (phone === "") {
         showError("phone-error", "Phone number is required.");
         isValid = false;
     } else if (!phonePattern.test(phone)) {
         showError("phone-error", "Should be 11 digits.");
         isValid = false;
     }
 
     
 
     // Validate pincode
     if (pincode === "") {
         showError("pincode-error", "Pincode is required.");
         isValid = false;
     } else if (!pincodePattern.test(pincode)) {
         showError("pincode-error", "Should be 5-6 digits.");
         isValid = false;
     }
    
 
     // Validate locality
     if (locality === "") {
         showError("locality-error", " locality is required.");
         isValid = false;
     } else if (!locationPattern.test(locality)) {
        showError("city-error", "Please enter a valid address with only letters, numbers, and basic symbols (, . - /).");
         isValid = false;
     } else if (locality.length < 3) {
         showError("locality-error", "Should be at least 3 characters.");
         isValid = false;
     }
 
     // Validate city
     if (city === "") {
         showError("city-error", "City is required.");
         isValid = false;
     } else if (!namePattern.test(city)) {
         showError("city-error", "Should contain only alphabets.");
         isValid = false;
     } else if (city.length < 3) {
         showError("city-error", "Should be at least 3 characters.");
         isValid = false;
     }
  
     // Validate address
     if (address === "") {
         showError("address-error", "Address is required.");
         isValid = false;
     } else if (!addressPattern.test(address)) {
         showError("address-error", "Should contain only alphabets.");
         isValid = false;
     } else if (address.length < 3) {
         showError("address-error", "Should be at least 3 characters.");
         isValid = false;
     }
 
