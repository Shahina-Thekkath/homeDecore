    <script>

            async function updateQuantity(input) {
                const min = parseInt(input.dataset.min, 10); 
                const max = parseInt(input.dataset.max, 10); // Maximum quantity (product stock)
                const productId = input.dataset.productId; 
                const quantity = parseInt(input.value, 10); // User-entered quantity
                const stock = parseInt(input.dataset.productStock, 10);

                

                // Validate quantity against limits
                if ( quantity < min || quantity > max) {
                    Swal.fire({
                        icon: "warning",
                        title: "Invalid Quantity",
                        text: `Quantity must be between ${min} and ${max}.`,
                        confirmButtonText: "OK",
                        });
                    input.value = Math.max(min, Math.min(max, quantity)); // Reset to valid value
                    return;
                }

                // Make a fetch request to the backend to update the cart
                try {
                    const response = await fetch("/updateCartTotals", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ productId, quantity }),
                    });

                    const result = await response.json();

                    if (response.ok) {
                        if (result.updatedQuantity && result.updatedQuantity !== quantity) {
                            input.value = result.updatedQuantity; 

                        }

                    const subtotalField = document.querySelector(`#subtotal-${productId}`);
                    if (subtotalField) {
                        subtotalField.textContent = `₹${result.subtotal.toFixed(2)}`;
                    }

                    // Update the grand total dynamically
                    const grandTotalField = document.querySelector("#grand-total");
                    if (grandTotalField) {
                        grandTotalField.textContent = `${result.grandTotal.toFixed(2)}`;
                    }

                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: result.error || "Failed to update cart.",
                            confirmButtonText: "OK",
                        });
                    }
                } catch (error) {
                    console.error("Error updating cart:", error);
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "An error occurred. Please try again.",
                        confirmButtonText: "OK",
                        });
                }
            }

         
         async function deleteItem(id){
            try {

                // Use fetch API to send data
                const response = await fetch(`/deleteCartItem/${id}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json",
                },

                });

                const result = await response.json();  //parse the response (convert int normal from JSON)  ie it would like normal key value pair in an object

                if (response.ok) {
                Swal.fire({
                    icon: "success",
                    title: "Item Delete!",
                    text: result.message || "The Item has been successfully deleted",
                }).then(() => {
                    window.location.href = "/cart"
                });
                } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: result.message || "Failed to delete the item. Please try again.",
                });
                }
                } catch (error) {
                Swal.fire({
                icon: "error",
                title: "Error",
                text: "An unexpected error occurred. Please try again later.",
                });
                }
                            
         }
        

    </script>

