                        </tr>
                      </thead>
                      <tbody>
                        <% recentProducts.forEach((product, index) => { %>
                           <tr>
                          <td><%= index + 1 %></td>
                          <td class="productimgname">
                            <a href="/admin/productList" class="product-img">
                              
                              <% let img = product.image && product.image.length > 0 ? product.image[0] : null; %>
                              <% if (img) { %>
                                <img
                                  src="<%= typeof img === 'string' 
                                          ? (img.startsWith('http') ? img : '/admin-assets/product2/' + img) 
                                          : img.url %>"
                                  alt="product"
                                />
                              <% } %>
                            </a>
                            <a href="/admin/productList"><%= product.name %></a>
                          </td>
                          <td>₹<%= product.price.toFixed(2) %></td>
                        </tr>
