    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    

    <script>
  // initialize empty chart first
  let ctx = document.getElementById("salesChart").getContext("2d");
  let gradient = ctx.createLinearGradient(0, 0, 0, 400);
  gradient.addColorStop(0, "rgba(111, 66, 193, 0.5)");
  gradient.addColorStop(1, "rgba(111, 66, 193, 0)");

  window.salesChart = new Chart(ctx, {
    type: "line",
    data: {
      labels: [], // start empty
      datasets: [
        {
          label: "Sales",
          data: [],
          borderColor: "#6f42c1",
          backgroundColor: gradient,
          tension: 0.4,
          fill: true,
          pointBackgroundColor: "#6f42c1",
          pointRadius: 5,
          pointHoverRadius: 7
        }
      ]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { position: "top" },
        title: { display: true, text: "Sales Overview", font: { size: 18 } }
      },
      scales: {
        y: { beginAtZero: true }
      }
    }
  });

  async function loadSalesData(type = "monthly") {
    try {
      const res = await fetch(`/admin/sales?type=${type}`);
      const data = await res.json();

      if (!Array.isArray(data)) {
        console.error("Unexpected response:", data);
        return;
      }

      // prepare labels
      const labels = data.map(d => {
        if (type === "weekly") return `W${d._id.week}-${d._id.year}`;
        if (type === "monthly") return `${d._id.month}/${d._id.year}`;
        return d._id.year;
      });

      // sales numbers
      const sales = data.map(d => d.totalSales);

      // update the already created chart
      window.salesChart.data.labels = labels;
      window.salesChart.data.datasets[0].data = sales;
      window.salesChart.update();

    } catch (err) {
      console.error("Error loading sales data:", err);
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    loadSalesData("monthly");

    // dropdown filter change
    document.getElementById("salesFilter").addEventListener("change", (e) => {
      loadSalesData(e.target.value);
    });

    // Product Data from backend

    const topProducts = <%- JSON.stringify(topProducts) %>;
    
    const productLabels = topProducts.map(p => p.name);
    const productValues = topProducts.map(p => p.totalSold);

    const ctxProducts = document.getElementById("topProductsChart").getContext("2d");
    new Chart(ctxProducts, {
      type: "bar",
      data: {
        labels: productLabels,
        datasets: [{
          label: "Units Sold",
          data: productValues,
          backgroundColor: '#6f42c1',
          borderWidth: 2,
          borderRadius: 5, // rounded bars
          hoverBackgroundColor: "rgba(111, 66, 193, 1)"
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: { display: true, text: "Top Best-selling Products" },
          legend: { display: false }
        },
        scales: { y: { beginAtZero: true } },
        animation: {
          duration: 1800, // animation time
          easing: "easeOutBounce" // nice bounce effect
        }
      }
    });

    // Category data

    const topCategories = <%- JSON.stringify(topCategories) %>;
    
    const categoryLabels = topCategories.map(c => c.categoryName);
    const categoryValues = topCategories.map(c => c.totalSold);

    const ctxCategories = document.getElementById("topCategoriesChart").getContext("2d");
    new Chart(ctxCategories, {
      type: "pie",
      data: {
        labels: categoryLabels,
        datasets: [{
          label: "units Sold",
          data: categoryValues,
          backgroundColor: [
        "rgba(40, 167, 69, 0.6)",
        "rgba(111, 66, 193, 0.6)",
        "rgba(255, 193, 7, 0.6)",
        "rgba(220, 53, 69, 0.6)",
        "rgba(23, 162, 184, 0.6)",
        "rgba(108, 117, 125, 0.6)",
        "rgba(0, 123, 255, 0.6)",
        "rgba(255, 99, 132, 0.6)",
        "rgba(153, 102, 255, 0.6)",
        "rgba(75, 192, 192, 0.6)"
      ],
          borderColor: "#fff",
          borderWidth: 2,
          hoverOffset: 15 // pops out on hover
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: { display: true, text: "Top Best-Selling Categories" },
          legend: { position: "right" }
        },
        animation: {
          duration: 2000,
          easing: "easeInOutQuart" // smooth growing effect
        }
      }
    });
  });
</script>


    

  

