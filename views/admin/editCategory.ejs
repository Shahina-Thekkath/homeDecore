    <script>
         
        

          document.getElementById("categoryForm").addEventListener("submit", async function(event){
               
               
               event.preventDefault();
               var CategoryId = document.getElementById('CategoryId').value;

               
               

               let isValid = true;

               let categoryNames = document.querySelector("#categoryName");
               let categoryName = categoryNames.value.trim();
              
               const namePattern = /^[a-zA-Z\s]{3,20}$/;

               if(!categoryName || categoryName == ""){
                  
                  document.getElementById("error-message").innerHTML = "Invalid Name";
                  isValid = false;
               } else if(categoryName.length < 4){
                document.getElementById("error-message").innerHTML = "Name should'nt be less than 4";
                isValid = false;
               }else if(!namePattern.test(categoryName)){
   
                document.getElementById("error-message").innerHTML = "Should not include numbers";
                isValid = false;
               }
               
               if(isValid){
                 
                 var formData ={
                    name: categoryName,
                 }

                 try {

const response = await fetch(`/admin/editCategory/${CategoryId}`, {
method: 'POST',
headers: { 'Content-Type': 'application/json' },
body: JSON.stringify(formData)
});

if(response.ok){
Swal.fire({
        icon: "success",
        title: "category Updated",
        text: "category has been updated.",
        showConfirmButton: false,
        timer: 1500,
    }).then(() => {
        window.location.href = "/admin/category"
    });

}else{

const errorData = await response.json()
document.getElementById("error-message").innerHTML = errorData.message;
}


} catch (error) {

   console.error("Error submitting form");

}   


}

              

               

})

        function message(msg){
            if(msg){
                  Swal.fire({
