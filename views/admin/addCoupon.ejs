    <script>
        document.querySelector('#couponForm').addEventListener('submit', async function (e) {
            e.preventDefault();      // Prevent default form submission

            const rules = [
                {name: 'name', regex: /^[a-zA-Z0-9â‚¹\s]{3,30}$/, message: 'Name must be 3-30 letters only'},
                {name: 'code', regex: /^[A-Z0-9_-]{3,10}$/, message: 'Code must be characters (A-Z, 0-9, _, -)'},
                {name: 'discountAmount', regex: /^\d+(\.\d{1,2})?$/, message: 'Discount must be a number (1-999)'},
                {name: 'usageLimit', regex: /^\d{1,3}$/, message: 'Usage limit must be a positive number'},
                {name: 'minPurchaseAmount', regex: /^\d+(\.\d{1,2})?$/, message: 'Minimum purchase amount must be a number'},
                {name: 'expiresOn', regex: /^\d{2}-\d{2}-\d{4}$/, message: 'Enter a valid expiry date (DD-MM-YYYY)'}
        ];

         const form = this;
         const formData = new FormData(form);
         const data = Object.fromEntries(formData.entries());
    
         //clear previous error messages
         rules.forEach(rule =>{
            const errorField = document.getElementById(`${rule.name}-error`);
            if(errorField) errorField.innerText = '';
         });


         let isValid = true;

        // frontend validation
        rules.forEach(rule => {
            const input = form.elements[rule.name];
            const errorField = document.getElementById(`${rule.name}-error`);
            if(!rule.regex.test(input?.value.trim())) {
                isValid = false;
                if(errorField) errorField.innerText = rule.message;
            }
        });

        const discountType = form.elements["discountType"].value;
        const minPurchaseAmount = parseFloat(data.minPurchaseAmount);
        const discountAmount = parseFloat(data.discountAmount);
        const usageLimit = parseFloat(data.usageLimit);
        const expiresOn = data.expiresOn;

        if(discountAmount <= 0) {
          isValid = false;
          const discountAmountError = document.getElementById('discountAmount-error');
          discountAmountError.innerText = "Discount Amount should not be negative";
        }

        if(minPurchaseAmount <= 0) {
          isValid = false
          const minPurchaseAmountError = document.getElementById('minPurchaseAmount-error');
          minPurchaseAmountError.innerText = "Minimum purchase amount should be greater than zero"
        }

        if(usageLimit <= 0) {
          isValid = false;
          const usageLimitError = document.getElementById('usageLimit-error');
          usageLimitError.innerText = "Usage should'nt be a negative number";
        }

        const MAX_FLAT_DISCOUNT_PERCENT = 50; 
        const MAX_PERCENTAGE_DISCOUNT = 50;

        if(discountType === "flat") {
          if(discountAmount >= minPurchaseAmount){
          isValid = false;
          
              const minPurchaseError = document.getElementById('minPurchaseAmount-error');
              if(minPurchaseError) {
                minPurchaseError.innerText = "Minimum Purchase amount should be greater than or equal to discount";
              }

              Swal.fire("Validation Error",
                        "Minimum purchase amount cannot be less than discount amount",
                        "warning"
              );

              return;
          }

          const maxAllowedDiscount = (minPurchaseAmount * MAX_FLAT_DISCOUNT_PERCENT) / 100;

          if(discountAmount > maxAllowedDiscount) {
            isValid = false;

            if(minPurchaseError) {
              minPurchaseError.innerText = `Flat discount cannot exceed ${MAX_FLAT_DISCOUNT_PERCENT}% of minimum purchase amount`;
            }

              return
          }
        } else if(discountType === 'percentage') {
          if(discountAmount > MAX_PERCENTAGE_DISCOUNT) {
            isValid = false;
            discountAmountError.innerText = `Discount amount should not exceed ${MAX_PERCENTAGE_DISCOUNT}%`;
          }
        }

        // date validation
        if(expiresOn){
            const [day, month, year] = expiresOn.split("-");
            const expiryDate = new Date(year, month - 1, day);

           const today = new Date();
           today.setHours(0,0,0,0);

          if(isNaN(expiryDate.getTime()) || expiryDate <= today) {
            isValid = false;
            document.getElementById('expiresOn-error').innerText = 'expiry date must be a valid future date';
          }
        }
       




         if(!isValid) {
            Swal.fire('Validation Error', 'Please correct the highlighted fields.', 'warning');
            return;
         }

        try {
            
             const res = await fetch(form.action, {
                method: 'POST',
                headers: {
                'Content-Type': 'application/json'
              },
                body: JSON.stringify(data)
             });

             const result = await res.json();

             if(res.ok && result.success) {
                Swal.fire({
                  title: 'Success',
                  text: 'Coupon added successfully.',
                  icon: 'success',
                  confirmButtonText: 'Go to Coupon List'
              }).then(() => {
                  window.location.href = '/admin/coupon'; //  Redirect to coupon list page
               });
            } else if (result.errors){

                //Backend error display
                Object.entries(result.errors).forEach(([field, message]) => {
                    const errorField = document.getElementById(`${field}-error`);
                    if(errorField) errorField.innerText = message;
                });
                Swal.fire('Submission Failed', 'Please fix the errors and try again.', 'error');

            } else {
                Swal.fire('Failed', result.message || 'Unknown error occurred.', 'error');
            }

        } catch (error) {
            console.error(error);
            Swal.fire('Server Error', 'Please try again later.', 'error');
            
        }
     });
    </script>

