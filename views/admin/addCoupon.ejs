    <script>
        document.querySelector('#couponForm').addEventListener('submit', async function (e) {
            e.preventDefault();      // Prevent default form submission

            const rules = [
                {name: 'name', regex: /^[a-zA-Z0-9₹\s]{3,30}$/, message: 'Name must be 3-30 letters only'},
                {name: 'code', regex: /^[A-Z0-9_-]{3,10}$/, message: 'Code must be characters (A-Z, 0-9, _, -)'},
                {name: 'discountAmount', regex: /^\d+(\.\d{1,2})?$/, message: 'Discount must be a number (1-999)'},
                {name: 'usageLimit', regex: /^\d+$/, message: 'Usage limit must be a positive number'},
                {name: 'minPurchaseAmount', regex: /^\d+(\.\d{1,2})?$/, message: 'Minimum purchase amount must be a number'},
                {name: 'expiresOn', regex: /^\d{2}-\d{2}-\d{4}$/, message: 'Enter a valid expiry date (DD-MM-YYYY)'}
        ];

         const form = this;
         const formData = new FormData(form);
         console.log("couponFormData:", formData);
         const data = Object.fromEntries(formData.entries());
    
         //clear previous error messages
         rules.forEach(rule =>{
            const errorField = document.getElementById(`${rule.name}-error`);
            if(errorField) errorField.innerText = '';
         });


         let isValid = true;

        // frontend validation
        rules.forEach(rule => {
            const input = form.elements[rule.name];
            const errorField = document.getElementById(`${rule.name}-error`);
            if(!rule.regex.test(input?.value.trim())) {
                isValid = false;
                if(errorField) errorField.innerText = rule.message;
            }
        });

         if(!isValid) {
            Swal.fire('Validation Error', 'Please correct the highlighted fields.', 'warning');
            return;
         }

        try {
            
             const res = await fetch(form.action, {
                method: 'POST',
                headers: {
                'Content-Type': 'application/json'
              },
                body: JSON.stringify(data)
             });

             const result = await res.json();

             if(res.ok && result.success) {
                Swal.fire({
                  title: 'Success',
                  text: 'Coupon added successfully.',
                  icon: 'success',
                  confirmButtonText: 'Go to Coupon List'
              }).then(() => {
                  window.location.href = '/admin/coupon'; //  Redirect to coupon list page
               });
            } else if (result.errors){

                //Backend error display
                Object.entries(result.errors).forEach(([field, message]) => {
                    const errorField = document.getElementById(`${field}-error`);
                    if(errorField) errorField.innerText = message;
                });
                Swal.fire('Submission Failed', 'Please fix the errors and try again.', 'error');

            } else {
                Swal.fire('Failed', result.message || 'Unknown error occurred.', 'error');
            }

        } catch (error) {
            console.error(error);
            Swal.fire('Server Error', 'Please try again later.', 'error');
            
        }
     });
