    <script>
        $(document).ready(function () {
             // Success message handling
            const urlParams = new URLSearchParams(window.location.search);
            const successMessage = urlParams.get('success');
            if (successMessage) {
                Swal.fire({
                    position: "center",
                    icon: "success",
                    title: successMessage,
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                   window.location.href = "/admin/productList"  // Redirect to remove query parameters
                });
            }

    // Delete product function
   $(document).on('click', '.delete-product-btn', function (e) {
        e.preventDefault(); // Prevent default action to avoid redirect before confirming
        const productId = $(this).data('id');

        Swal.fire({
            title: "Are you sure?",
            text: "This action cannot be undone!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                // Send DELETE request
                $.ajax({
                    url: `/admin/products/removeProduct/${productId}`, // Backend route to delete the product
                    type: "POST",
                    success: function (response) {
                        Swal.fire({
                            icon: "success",
                            title: response.message || "Product deleted successfully!",
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            window.location.reload(); // Reload the page to reflect the changes
                        });
                    },
                    error: function (err) {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: "Failed to delete the product. Try again later.",
                        });
                    }
                });
            }
        });
         $('#productSelect, #categorySelect, #priceOrder, #otherOptions').on('change', function () {
                applyFilters();
            });
    });

    //use selected values and pass them via AJAX to the backend

    


});

function applyFilters() {

const product = $('#productSelect').val();
const category = $('#categorySelect').val();
const priceOrder = $('#priceOrder').val();
const other = $('#otherOptions').val();

$.ajax({
    url: '/admin/products/filter',
    method: 'GET',
    data: {
        product, 
        category,
        priceOrder,
        other

    },
    success: function (response) {

            const products = response.data;
            let html = '';

            for (let i = products.length - 1; i >= 0; i--) {
                const product = products[i];
                html += `
                    <tr>
                        <td class="productimgname">
                            <a href="#" class="product-img">
                                <img src="${product.image[0].url}" alt="product">
                            </a>
                        </td>
                        <td>
                            ${product.name}
                            ${product.isFeatured ? `<span class="badge bg-warning text-dark ms-2">Featured</span>` : ''}
                        </td>
                        <td>${product.price}</td>
                        <td>${product.quantity}</td>
                        <td>${product.categoryId?.name || ''}</td>
                        <td>
                            <a class="me-3" href="/admin/products/editProduct/${product._id}">
                                <img src="/admin-assets/img/icons/edit.svg" alt="edit">
                            </a>
                            <a class="delete-product-btn confirm-text" href="/admin/products/removeProduct/${product._id}">
                                <img src="/admin-assets/img/icons/delete.svg" alt="delete">
                            </a>
                        </td>
                    </tr>
                `;
            }

            $('#productTableBody').html(html);
        },
    error: function(xhr, status, error){
        Swal.fire({
            icon: 'error',
            title: 'Filter Failed',
            text: 'Something went wrong while applying filters. Please try again later.',
            footer: `<small>${error}</small>`
        });
    }
});

}


